@model VehicleModelViewModel

<div class="card card-header-pills m-1 p-1">
    <div class="bg-transparent p-1">
        <h3>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Make.Name</small>
            </span>
        </h3>
    </div>
    <div>
            <span class="badge badge-pill badge-light" style="float:right">
                <a class="btn btn-outline-secondary"
                   asp-action="Edit"
                   asp-controller="Model"
                   asp-route-Id="@Model.Id">Izmjeni</a>

                <a class="btn btn-outline-secondary"
                   onclick="return confirm('Jeste li sigurni da želite izbrisati model: @Model.Name')"
                   asp-action="Delete"
                   asp-controller="Model"
                   asp-route-Id="@Model.Id">Izbriši</a>
            </span>
    </div>
</div>