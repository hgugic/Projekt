@model VehicleMake

<div class="card m-4" style="min-width: 18rem; max-width:30.5%">
    <div class="card-header">
        <h3>@Model.Name</h3>
    </div>
    <div class="card-body text-center">
        <a class="btn btn-outline-dark m-1"
           asp-controller="Model" 
           asp-action="Administration" 
           asp-route-makeId="@Model.Id">Pogledaj modele</a>
    </div>

    <div class="card-footer text-center">
        <div class="btn">
            <a class="btn btn-outline-dark"
               asp-action="Edit"
               asp-controller="Make"
               asp-route-makeId="@Model.Id">Izmjeni</a>

            <a class="btn btn-outline-danger"
               onclick="return confirm('Jeste li sigurni da želite izbrisati proizvođača: @Model.Name')" 
               asp-action="Delete"
               asp-controller="Make"
               asp-route-makeId="@Model.Id">Izbriši</a>
        </div>
    </div>

</div>