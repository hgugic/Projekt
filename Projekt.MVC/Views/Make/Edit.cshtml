@model VehicleMakeViewModel

<form enctype="multipart/form-data" asp-controller="Make" asp-action="Edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-row-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Naziv" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Abrv" class="col-sm-2 col-row-label"></label>
        <div class="col-sm-10">
            <input asp-for="Abrv" class="form-control" placeholder="Skraćenica" />
            <span asp-validation-for="Abrv" class="text-danger"></span>
        </div>
    </div>


    <div>
        <button class="btn btn-outline-secondary" type="submit">Spremi</button>
        <a asp-controller="Make" asp-action="Administration" class="btn btn-outline-info">Otkaži</a>
    </div>

</form>